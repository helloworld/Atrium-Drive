<div class="ui container">
    <div class="ui two column relaxed grid">
        <div class="three wide column">
            <div class="ui vertical menu">
                <div class="item">
                    <div class="ui transparent icon input">
                        <input type="text" placeholder="Search files...">
                        <i class="search icon"></i>
                    </div>
                </div>
                <a class="item">
                    <input type="file" name="file" id="file-selection" class="inputfile" />
                    <label class="ui fluid small blue button" for="file-selection">Upload a file</label>
                </a>
                <div class="item">
                    Home
                    <div class="menu">
                        <a class="active item">My files</a>
                        <a class="item">Shared with me</a>
                        <a class="item">Deleted Files</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="one wide column"></div>
        <div class="twelve wide column">
            <table class="ui very basic selectable table">
                <thead>
                    <tr>
                      <th>Name</th>
                      <th>File Type</th>
                      <th>Download</th>
                      <th>Upload Date</th>
                      <th>Description</th>
                      <th></th>
                      <th></th>
                    </tr>
                  </thead>
                <tbody id="files-container">
                    {{#each files}}
                    <tr data-id="{{_id}}">
                        <td class="collapsing">
                            <i class="{{icon}} icon"></i> <span id="filename">{{filename}}</span>
                        </td>
                        <td>{{filetype}}</td>
                        <td><a id="download-link{{id}}" href="{{url}}">Download</a></td>
                        <td>{{readable-date}}</td>
                        <td>
                            {{#if description}}
                            <div class="ui description dropdown" id="description" data-content="{{description}}" data-variation="basic">
                              <div class="text">Description</div>
                              <i class="dropdown icon"></i>
                            </div>
                            {{else}}
                            <div class="ui description dropdown" id="description" data-content="No description" data-variation="basic">
                              <div class="text">Description</div>
                              <i class="dropdown icon"></i>
                            </div>
                            {{/if}}
                        </td>
                        <td class="collapsing">
                            <div class="ui icon basic mini button"> Share </div>
                        </td>
                        <td class="collapsing">
                            <div class="ui icon top left pointing options dropdown basic mini button" data-id="{{_id}}">
                                <span class="text">...</span>
                                <div class="menu">
                                    <div class="header">File options</div>
                                    <div class="item">Open in browser</div>
                                    <div class="item">Delete</div>
                                    <div class="ui divider"></div>
                                    <div class="item">Edit Name</div>
                                    <div class="item">Edit Description</div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            </div>
        </div>
        <div class="ui modal">
            <i class="close icon"></i>
            <div class="header">
                File details
            </div>
            <div class="image content">
                <div class="description">
                    <div class="ui form">
                        <div class="field">
                            <label>File name: </label>
                            <input placeholder="File Name" id="modal-file-name" type="text">
                        </div>
                        <div class="field">
                            <label>Description:</label>
                            <textarea  id="modal-description" rows="2"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="actions">
                <div class="ui positive right labeled icon button">
                    Save
                    <i class="checkmark icon"></i>
                </div>
            </div>
        </div>
    </div>

    {{addLocalCSS '/css/dashboard.css'}} 
    {{addLocalJS '/js/dashboard/dashboard-ui.js'}} 
    {{addLocalJS '/js/dashboard/upload.js'}}
